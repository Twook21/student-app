  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set dynamic timestamps",
          "pm.globals.set('currentDate', new Date().toISOString().split('T')[0]);",
          "pm.globals.set('currentDateTime', new Date().toISOString());",
          "pm.globals.set('currentTime', new Date().toTimeString().split(' ')[0]);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract IDs from responses for chaining requests",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    try {",
          "        const response = pm.response.json();",
          "        if (response.success && response.data) {",
          "            // Extract user ID",
          "            if (response.data.id && pm.info.requestName.includes('User')) {",
          "                pm.collectionVariables.set('userId', response.data.id);",
          "            }",
          "            // Extract student ID",
          "            if (response.data.id && pm.info.requestName.includes('Student')) {",
          "                pm.collectionVariables.set('studentId', response.data.id);",
          "            }",
          "            // Extract teacher ID",
          "            if (response.data.id && pm.info.requestName.includes('Teacher')) {",
          "                pm.collectionVariables.set('teacherId', response.data.id);",
          "            }",
          "            // Extract class ID",
          "            if (response.data.id && pm.info.requestName.includes('Class')) {",
          "                pm.collectionVariables.set('classId', response.data.id);",
          "            }",
          "            // Extract point record ID",
          "            if (response.data.id && pm.info.requestName.includes('Point Record')) {",
          "                pm.collectionVariables.set('pointRecordId', response.data.id);",
          "            }",
          "        }",
          "    } catch (e) {",
          "        console.log('No JSON response to parse');",
          "    }",
          "}",
          "",
          "// Basic response validation",
          "pm.test('Response status code is successful', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});",
          "",
          "pm.test('Response has success field', function () {",
          "    const response = pm.response.json();",
          "    pm.expect(response).to.have.property('success');",
          "});"
        ]
      }
    }
  ]
}