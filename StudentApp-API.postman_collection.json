      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "/api/auth/[...nextauth]",
              "host": ["api"],
              "path": ["auth", "[...nextauth]"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "email", "value": "user@email.com", "type": "text" },
                { "key": "password", "value": "password", "type": "text" }
              ]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "/api/auth/register",
              "host": ["api"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@email.com\",\n  \"password\": \"password123\",\n  \"role\": \"SISWA\",\n  \"name\": \"Nama Siswa\",\n  \"nisn\": \"1234567890\"\n}"
            }
          }
        }
      ]
    },
